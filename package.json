{
  "name": "ciri",
  "version": "2.0.0",
  "description": "Discord Statistics & Moderation Bot for Eng-Jpn servers",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --es-module-specifier-resolution=node --enable-source-maps build/main.js",
    "watch": "",
    "build": "rm -rf build && tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build && cp ./src/database/schema.sql ./build/database/schema.sql",
    "build:watch": "pm2 start npm --watch -- run build",
    "start": "npm run build && pm2 start build/main.js --name ciri --node-args='--es-module-specifier-resolution=node --enable-source-maps'",
    "kill": "pm2 stop ciri",
    "pm2": "pm2",
    "pm2ls": "pm2 ls",
    "pm2logs": "pm2 logs",
    "lint": "prettier --write src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lazyuki/DiscordStatsBot_EN_JP.git"
  },
  "author": "Lazyuki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lazyuki/DiscordStatsBot_EN_JP/issues"
  },
  "homepage": "https://github.com/Lazyuki/DiscordStatsBot_EN_JP#readme",
  "dependencies": {
    "@discordjs/rest": "^0.3.0",
    "axios": "^0.24.0",
    "better-sqlite3": "^7.4.6",
    "bufferutil": "^4.0.5",
    "common-tags": "^1.8.2",
    "date-fns": "^2.28.0",
    "discord-api-types": "^0.27.1",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "env-var": "^7.1.1",
    "erlpack": "github:discord/erlpack",
    "pm2": "^5.2.0",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.5",
    "utf-8-validate": "^5.0.7",
    "winston": "^3.3.3",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.4.2",
    "@types/common-tags": "^1.8.1",
    "esbuild": "^0.14.21",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "tscpaths": "^0.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
